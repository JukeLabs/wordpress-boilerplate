# ----------------------------------------------------------------------------------------------
# Git Ignores @see https://github.com/github/gitignore
# ----------------------------------------------------------------------------------------------
!.gitignore

# Application Files
# ----------------------------------------------------------------------------------------------

# Ignore sensitive files
*.env
*.env.*
!*.env.example
web/wp-config-local.php

# Ignore directories generated by Composer
vendor

# Wordpress Files
# ----------------------------------------------------------------------------------------------

# WordPress & Core Files
!web/
!web/index.php
!web/wp-cli.yml
!web/wp-config.php
web/wp-config-local.php
web/wp-cli.local.yml
web/wp
!web/content/
web/content/*
web/content/blogs.dir/
web/content/upgrade/
web/content/backup-db/
web/content/updraft/
web/content/backupwordpress-*/
web/content/managewp/backups/
web/content/advanced-cache.php
web/content/wp-cache-config.php
web/sitemap.xml
web/sitemap.xml.gz
web/content/cache/
web/content/backups/

# WordPress app
!web/content/object-cache.php

# WordPress uploads
!web/content/uploads/
web/content/uploads/*
!web/content/uploads/.gitkeep
!web/content/uploads/.htaccess.off

# WordPress plugins
!web/content/plugins/
web/content/plugins/*
!web/content/plugins/index.php

# WordPress mu-plugins
!web/content/mu-plugins/
web/content/mu-plugins/*
!web/content/mu-plugins/index.php
!web/content/mu-plugins/bedrock-autoloader.php
!web/content/mu-plugins/disallow-indexing.php
!web/content/mu-plugins/register-theme-directory.php
!web/content/mu-plugins/disable-htaccess-rewrite-rules.php

# WordPress themes
!web/content/themes/
!web/content/themes/index.php


# Custom Development for Wordpress Files
# Add Wordpress plugins that require files to be checked into the repo
# ----------------------------------------------------------------------------------------------
!web/content/plugins/advanced-custom-fields-pro
!web/content/plugins/wp-migrate-db-pro
!web/content/plugins/wp-migrate-db-pro-cli
!web/content/plugins/wp-migrate-db-pro-media-files


# Bower / Node / Grunt / SASS
# @see - http://stackoverflow.com/questions/39990017/should-i-commit-the-yarn-lock-file-and-what-is-it-for
# ----------------------------------------------------------------------------------------------
*node_modules
*bower_components
*.grunt
*.sass-cache
*.tmp
*tmp
*.seed
*.csv
*.dat
*.out
*.pid
*.swp


# Vagrant
# ----------------------------------------------------------------------------------------------
.vagrant
vagrant.local.yml


# OSX
# ----------------------------------------------------------------------------------------------
.DS_Store
**/.DS_Store
._*

# Files that might appear on external disk
.Spotlight-V100
.Trashes
.com.apple.timemachine.supported


# Windows
# ----------------------------------------------------------------------------------------------
Thumbs.db


# Packages
# ----------------------------------------------------------------------------------------------
*.7z
*.dmg
*.gz
*.bz2
*.iso
*.jar
*.rar
*.tar
*.zip
*.tgz
*.tar.gz


# Logs and databases
# ----------------------------------------------------------------------------------------------
*.log
*.sql
*.htpasswd


# Sublime / Other Editors
# ----------------------------------------------------------------------------------------------
# cache files for sublime text
*.tmlanguage.cache
*.tmPreferences.cache
*.stTheme.cache
.idea
*.iml


# workspace files are user-specific
# ----------------------------------------------------------------------------------------------
*.sublime-workspace

# project files should be checked into the repository, unless a significant
# proportion of contributors will probably not be using SublimeText
*.sublime-project


# Tags
# ----------------------------------------------------------------------------------------------
# Ignore tags created by etags and ctags
TAGS
tags


# Vim
# ----------------------------------------------------------------------------------------------
#.*.sw[a-z]
#*.un~
Session.vim
